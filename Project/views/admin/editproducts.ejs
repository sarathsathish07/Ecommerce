    <section class="content-main">
      <div class="content-header">
        <div>
          <h2 class="content-title card-title">Edit Products</h2>
          <p>Add a Product</p>
          <% if (locals.alert) { %>
          <div class="alert alert-danger text-center m-3" id="error">
            <%= locals.alert %>
          </div>
          <% } %>
        </div>
      </div>
      <div class="card">
        <div class="card-body">
          <div class="row" style="justify-content: center">
            <div class="col-md-3">
              <form
                action="/updateproduct/<%= product._id  %>"
                method="post"
                enctype="multipart/form-data"
              >
                <div class="mb-4">
                  <label for="product_name" class="form-label"
                    >Product title</label
                  >
                  <input
                    type="text"
                    placeholder="Type here"
                    name="producttitle"
                    value="<%= product.productTitle %>"
                    class="form-control"
                    id="product_name"
                    onkeyup="validateName()"
                  />
                  <span
                    id="name-error"
                    style="font-size: 14px; margin-top: -20px"
                  ></span>
                </div>

                <div class="mb-4">
                  <label class="form-label">Description</label>
                  <textarea
                    placeholder="Type here"
                    name="description"
                    class="form-control"
                    rows="4"
                    id="product_description"
                    onkeyup="validateDescription()"
                  >
                  <%= product.description %></textarea
                  >
                  <span
                    id="description-error"
                    style="font-size: 14px; margin-top: -20px"
                  ></span>
                </div>
                <div class="mb-4">
                  <label class="form-label">Cost in Rs</label>
                  <input
                    placeholder="0"
                    name="price"
                    class="form-control"
                    id="product_price"
                    value="<%= product.price %>"
                    onkeyup="validatePrice()"
                  >
                  
                  <span
                    id="price-error"
                    style="font-size: 14px; margin-top: -20px"
                  ></span>
                  <span
                    id="price-error"
                    style="font-size: 14px; margin-top: -20px"
                  ></span>
                </div>
                <div class="mb-4">
                  <label for="product_stock" class="form-label">Stock</label>
                  <input
                      type="text"
                      placeholder="Stock value"
                      name="stock"
                      value="  <%= product.stock %>"
                      class="form-control"
                      id="product_stock"
                      onkeyup="validateStock()" 
                  />
                
                  <span id="stock-error" style="font-size: 14px; margin-top: -20px"></span> 
              </div>
                <div class="mb-4">
                  <label for="product_category" class="form-label"
                    >Category</label
                  >
                  <select
                    name="category"
                    class="form-control"
                    id="product_category"
                  >
                  
                    <% categories.forEach(category => { %>
                      <option value="<%= category._id %>">
                        <%= category.category %>
                      </option>
                    <% }); %>
                  </select>
                </div>
                <!-- Existing Images -->
            <div class="mb-4">
              <label class="form-label">Existing Images</label>
              <div class="existing-images">
                <% if (product.images && product.images.length > 0) { %>
                  <% product.images.forEach((imageUrl, index) => { %>
                    <div>
                      <img src="/static/<%= imageUrl %>" alt="Existing Image" style="width: 100px; height: auto;">
                      <input type="file" name="images" style="display: none;" accept="image/*" data-index="<%= index %>">
                      <input type="hidden" name="existingImages[]" value="<%= imageUrl %>">
                      <input type="hidden" name="existingImageIndexes[]" value="<%= index %>">
                      <input type="hidden" name="replacedImageIndex">

                      <button type="button" class="replace-image-btn" data-index="<%= index %>">Replace</button>
                    </div>
                  <% }) %>
                <% } else { %>
                  <p>No existing images</p>
                <% } %>
                
                
              </div>
            </div>
            <% if (!product.images || product.images.length === 0) { %>
              <div class="mb-4">
                  <label class="form-label">New Images</label>
                  <input
                      class="form-control"
                      name="images"
                      type="file"
                      id="product_image"
                      multiple
                  />
                  <span
                      id="image-error"
                      style="font-size: 14px; margin-top: -20px"
                  ></span>
              </div>
            <% } %>

                <div class="mb-4">
                  <label>
                    <input type="checkbox" name="isBestSeller" <%=
                    product.isBestSeller ? 'checked' : '' %>> Best Seller
                  </label>

                  <label>
                    <input type="checkbox" name="isNewArrival" <%=
                    product.isNewArrival ? 'checked' : '' %>> New Arrival
                  </label>

                  <label>
                    <input type="checkbox" name="isHotSale" <%=
                    product.isHotSale ? 'checked' : '' %>> Hot Sale
                  </label>
                </div>

                <div class="d-grid">
                  <button
                    class="btn btn-primary"
                    onclick="return validateForm()"
                  >
                    Edit Product
                  </button>
                  <span id="submit-error" style="font-size: 14px"></span>
                </div>
              </form>
            </div>
          
          </div>
         
        </div>
       
      </div>
      
    </section>
