        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Order Details</h2>
                    
                </div>
            </div>
            <div class="card">
                <header class="card-header">
                    <div class="row align-items-center">
                        <div class="col-lg-6 col-md-6 mb-lg-0 mb-15">
                            <span>
                                <i class="material-icons md-calendar_today"></i> <b><%= order.orderDate %></b>
                                
                            </span> <br>
                        
                        </div>
                    </div>
                </header> 
                <div class="card-body">
                    <div class="row mb-50 mt-20 order-info-wrap">
                        <div class="col-md-4">
                            <article class="icontext align-items-start">
                                <span class="icon icon-sm rounded-circle bg-primary-light">
                                    <i class="text-primary material-icons md-person"></i>
                                </span>
                                <div class="text">
                                    <h6 class="mb-1">Customer</h6>
                                    <p class="mb-1">
                                        <%= order.billingDetails.name %> <br>
                                        <%= order.billingDetails.email %> <br>
                                        <%= order.billingDetails.phone %>
                                    </p>
                                   
                                </div>
                            </article>
                        </div> 
                        <div class="col-md-4">
                            <article class="icontext align-items-start">
                                <span class="icon icon-sm rounded-circle bg-primary-light">
                                    <i class="text-primary material-icons md-local_shipping"></i>
                                </span>
                                <div class="text">
                                    <h6 class="mb-1">Status</h6>
                                    <p class="mb-1">
                                        <select class="form-select d-inline-block mb-lg-0 mb-15 mw-200" id="statusSelect">
                                            <option value="Pending" <%= order.status === 'Pending' ? 'selected' : '' %>>Pending</option>
                                            <option value="Shipped" <%= order.status === 'Shipped' ? 'selected' : '' %>>Shipped</option>
                                            <option value="Delivered" <%= order.status === 'Delivered' ? 'selected' : '' %>>Delivered</option>
                                            <option value="Cancelled" <%= order.status === 'Cancelled' ? 'selected' : '' %>>Cancelled</option>
                                        </select>
                                    </p>

                                </div>
                            </article>
                        </div> 
                        <div class="col-md-4">
                            <article class="icontext align-items-start">
                                <span class="icon icon-sm rounded-circle bg-primary-light">
                                    <i class="text-primary material-icons md-place"></i>
                                </span>
                                <div class="text">
                                    <h6 class="mb-1">Deliver to</h6>
                                    <p class="mb-1">
                                        City: <%= order.billingDetails.city %> <br>
                                        Address: <%= order.billingDetails.addressLine1 %> <br>
                                        Postal Code: <%= order.billingDetails.postalCode %> <br>
                                        Country: <%= order.billingDetails.country %>
                                    </p>
                                    
                                </div>
                            </article>
                        </div> 
                    </div> 
                    <div class="row">
                        <div class="col-lg-7">
                            <div class="table-responsive text-center">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th width="40%">Product</th>
                                            <th width="20%">Unit Price</th>
                                            <th width="20%">Quantity</th>
                                            <th width="20%" class="text-end">Total</th>
                                           
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% order.items.forEach(item => { %>
                                          <tr>
                                            <td>
                                              <a class="itemside" href="#">
                                                <div class="left">
                                                  <img src="/static/<%= item.product.images[0] %>" width="40" height="40" class="img-xs" alt="Item">
                                                </div>
                                                <div class="info"> <%= item.product.productTitle %> </div>
                                              </a>
                                            </td>
                                            <td> <%= item.price %> </td>
                                            <td> <%= item.quantity %> </td>
                                            
                                            <td class="text-end"> <%= item.price * item.quantity %> </td>
                                            
                                          </tr>
                                        <% }); %>
                                      </tbody>
                                </table>
                            </div> 
                            <div  style=" height: 80PX; display: flex; align-items: center; justify-content: center; background-color: rgba(8, 129, 120, 0.2);">
                                <span style="font-size: 18px;"> SUB TOTAL : Amount + Delivery Charge(100) - Discount:  Rs <%= order.totalPrice.toFixed(2) %></span>
                               
                              </div>
                        </div> 
                        <div class="col-lg-1"></div>
                        <div class="col-lg-4">
                            <div class="box shadow-sm bg-light">
                                <h6 class="mb-10">Payment info</h6>
                                <p>
                                    <%= order.paymentMethod %>
                                </p>
                                <h6 class="mb-10">Payment Status</h6>
                                <p>
                                    <%= order.paymentStatus %>
                                </p>
                                <h6 class="mb-10">Coupon Applied</h6>
                                <p>
                                    <% if (order.couponCode) { %>
                                        <%= order.couponCode %>
                                    <% } else { %>
                                        nil
                                    <% } %>
                                </p>

                            </div>
                           
                        </div> 
                    </div>
                </div> 
            </div> 
