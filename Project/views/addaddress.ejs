<%- include('userheader') %>

<!-- User Account Section Begin -->
<section class="user-account spad">
  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <div class="col-lg-3 col-md-4">
        <div class="account-sidebar text-center">
          <div class="sidebar-header">
            <h4>User Account</h4>
          </div>
          <ul class="account-menu">
            <li><a href="/useraccount">Account Details</a></li>
            <li class="active"><a href="/useraddress">Addresses</a></li>
            <li><a href="/userorders">Orders</a></li>
            <li><a href="/wallet">Wallet</a></li>
          </ul>
        </div>
      </div>

      <!-- Content -->
      <div class="col-lg-7 col-md-8">
        <div class="account-content">
          <!-- Address Section -->

          <!-- Add Address Form -->
          <section id="add-address" class="account-section mt-5">
            <h2><b>Add Address</b></h2>
            <form action="/addAddress" method="POST">
              <div class="form-group">
                <label for="addressLine1">Address Line 1:</label>
                <input
                  type="text"
                  id="addressLine1"
                  name="addressLine1"
                  class="form-control"
                  onkeyup="validateLine1()"
                />
                <span
                  id="line1-error"
                  style="font-size: 14px; margin-top: -20px"
                ></span>
                <input type="hidden" value="<%= checkout %>" name="checkout" />
                <% if (checkout=="checkout") { %>
                <input
                  type="hidden"
                  value="<%= totalPrice %>"
                  name="totalPrice"
                />
                <% } %>
              </div>

              <div class="form-group">
                <label for="addressLine2">Address Line 2:</label>
                <input
                  type="text"
                  id="addressLine2"
                  name="addressLine2"
                  class="form-control"
                  onkeyup="validateLine2()"
                />
                <span
                  id="line2-error"
                  style="font-size: 14px; margin-top: -20px"
                ></span>
              </div>

              <div class="form-group">
                <label for="city">City:</label>
                <input
                  type="text"
                  id="city"
                  name="city"
                  class="form-control"
                  onkeyup="validateCity()"
                />
                <span
                  id="city-error"
                  style="font-size: 14px; margin-top: -20px"
                ></span>
              </div>

              <div class="form-group">
                <label for="state">State:</label>
                <input
                  type="text"
                  id="state"
                  name="state"
                  class="form-control"
                  onkeyup="validateState()"
                />
                <span
                  id="state-error"
                  style="font-size: 14px; margin-top: -20px"
                ></span>
              </div>

              <div class="form-group">
                <label for="postalCode">Postal Code:</label>
                <input
                  type="text"
                  id="postalCode"
                  name="postalCode"
                  class="form-control"
                  onkeyup="validatePost()"
                />
                <span
                  id="postalcode-error"
                  style="font-size: 14px; margin-top: -20px"
                ></span>
              </div>
              
              <% if(orderId){ %>
                <input type="hidden" name="orderId" value="<%= orderId  %>">
                <% }%>
              <div class="form-group">
                <label for="country">Country:</label>
                <input
                  type="text"
                  id="country"
                  name="country"
                  class="form-control"
                  onkeyup="validateCountry()"
                />
                <span
                  id="country-error"
                  style="font-size: 14px; margin-top: -20px"
                ></span>
              </div>

              <div class="text-center">
                <button
                  type="submit"
                  class="btn"
                  style="background-color: #1f4959; color: white"
                  onclick="return validateForm()"
                >
                  Add Address
                </button>
                <span id="submit-error" style="font-size: 14px"></span>
              </div>
            </form>
          </section>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- User Account Section End -->

