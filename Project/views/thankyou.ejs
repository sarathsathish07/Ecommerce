<style>
 
  .thank-you-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 80vh; 
    text-align: center;
  }

  .thank-you-content {
    max-width: 600px; 
    margin: auto; 
  }

  .thank-you-content h2 {
