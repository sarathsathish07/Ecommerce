<!-- User Account Section Begin -->
<section class="user-account spad">
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-lg-3 col-md-4">
                <div class="account-sidebar text-center">
                    <div class="sidebar-header">
                        <h4>User Account</h4>
                    </div>
                    <ul class="account-menu">
                        <li><a href="/useraccount">Account Details</a></li>
                        <li class="active"><a href="/useraddress">Addresses</a></li>
                        <li><a href="/userorders">Orders</a></li>
                        <li><a href="#wishlist">Wishlist</a></li>
                        <li><a href="#logout">Logout</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-9 col-md-8 mt-5">
                <div class="account-content">
                    <!-- Address Section -->
                    <section id="user-address" class="account-section">
                        <h2><b>Manage Addresses</b></h2>
                        
                        <% if (addresses && addresses.length > 0) { %>
                        <ul>
                            <% for (let i = 0; i < addresses[0].addresses.length; i++) { %>
                            <li style="margin-bottom: 10px;">
                                <div style="display: flex;">
                                    <!-- Address Details -->
                                    <div style="margin-right: 30px;">
                                        <input
                                            type="radio"
                                            name="defaultAddress"
                                            value="<%= addresses[0].addresses[i]._id %>"
                                            onclick="setDefaultAddress('<%= addresses[0].addresses[i]._id %>')"
                                            <%= addresses[0].addresses[i].isDefault ? 'checked' : '' %>
                                        >
                                        <strong>Address <%= i + 1 %>:</strong>
                                        <p><%= addresses[0].addresses[i].addressLine1 %>, <%= addresses[0].addresses[i].addressLine2 %></p>
                                        <p><%= addresses[0].addresses[i].city %>, <%= addresses[0].addresses[i].state %></p>
                                        <p><%= addresses[0].addresses[i].country %> - <%= addresses[0].addresses[i].postalCode %></p>
                                    </div>
                                    <!-- Buttons -->
                                    <div>
                                        <a href="/editAddress/<%= addresses[0].addresses[i]._id %>" class="edit-btn"><i class="fas fa-edit"></i> Edit</a>
                                        <form id="deleteForm_<%= addresses[0].addresses[i]._id %>" action="/deleteAddress/<%= addresses[0].addresses[i]._id %>" method="post" style="display: inline-block;">
                                            <button type="submit" onclick="confirmDelete(event, '<%= addresses[0].addresses[i]._id %>')" style="background-color: #1f4959; color: white; margin-left: 10px;">Delete</button>
                                        </form>
                                        
                                    </div>
                                </div>
                            </li>
                            <% } %>
                        </ul>
                        <% } else { %>
                        <p>No existing addresses found.</p>
                        <% } %>
                    </section>
                    
                    <!-- Add Address Form -->
                    <section id="add-address" class="account-section">
                        
                        <form action="/addAddress" method="get">
                           
                            <button type="submit" style="background-color: #1f4959; color: white; padding-left: 10px; padding-right: 10px;">Add Address</button>
                        </form>
                    </section>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- User Account Section End -->

